
<launch>

  <!-- Kamera pertama -->
  <group ns="field1">
    <node name="usb_cam1" pkg="usb_cam" type="usb_cam_node" output="screen">
      <param name="video_device" value="/dev/video2" />
      <param name="image_width" value="640" />
      <param name="image_height" value="480" />
      <param name="pixel_format" value="yuyv" />
      <param name="camera_frame_id" value="usb_cam1" />
      <param name="camera_info_url" type="string" value="package://sparki_bringup/data/calibration_data/ost1.yaml" />
      <param name="camera_name" type="string" value="usb_cam1" />

      <remap from="/usb_cam1/image_raw" to="image_color1"/>
      <remap from="/usb_cam1/camera_info" to="camera_info1"/>
    </node>

    <node name="image_proc1" pkg="image_proc" type="image_proc" ns="usb_cam1"/>
  </group>

  <!-- Kamera kedua -->
  <group ns="field2">
    <node name="usb_cam2" pkg="usb_cam" type="usb_cam_node" output="screen">
      <param name="video_device" value="/dev/video4" />
      <param name="image_width" value="640" />
      <param name="image_height" value="480" />
      <param name="pixel_format" value="yuyv" />
      <param name="camera_frame_id" value="usb_cam2" />
      <param name="camera_info_url" type="string" value="package://sparki_bringup/data/calibration_data/ost2.yaml" />
      <param name="camera_name" type="string" value="usb_cam2" />

      <remap from="/usb_cam2/image_raw" to="image_color2"/>
      <remap from="/usb_cam2/camera_info" to="camera_info2"/>
    </node>

    <node name="image_proc2" pkg="image_proc" type="image_proc" ns="usb_cam2"/>
  </group>

</launch>
